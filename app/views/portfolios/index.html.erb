<h1> Portfolio Items </h1>

<% @portfolio_items.reverse.each do |portfolio_items| %>
<p><%= portfolio_items.title %></p>
<p><%= portfolio_items.subtitle %></p>
<p><%= portfolio_items.body %></p>
<p><%= image_tag portfolio_items.thumb_img unless portfolio_items.thumb_img.nil? %></p> 
<i><%= "Created on: " + portfolio_items.created_at.strftime("%A - %B %d, %Y") unless portfolio_items.updated_at != portfolio_items.created_at %></i>
<p><i><%= "Updated on: " + portfolio_items.updated_at.strftime("%A - %B %d, %Y") unless portfolio_items.updated_at == portfolio_items.created_at %></i></p>
<% end %>
