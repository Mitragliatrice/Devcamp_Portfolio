<h2> Portfolio Items </h2>

<%= link_to "Create New Portfolio", new_portfolio_path %>

<% @portfolio_items.each do |portfolio_item| %>
  <hr>
   <p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>

  <p><%= portfolio_item.subtitle %></p>

  <p><%= portfolio_item.body %></p>

  <p><%= image_tag portfolio_item.thumb_img unless portfolio_item.thumb_img.nil? %></p> 

  <i><%= "Created on: " + portfolio_item.created_at.strftime("%A - %B %d, %Y") + " at " + portfolio_item.updated_at.strftime("%I:%M %P") unless portfolio_item.updated_at != portfolio_item.created_at %></i>

  <p><i><%= "Updated on: " + portfolio_item.updated_at.strftime("%A - %B %d, %Y") + " at " + portfolio_item.updated_at.strftime("%I:%M %P") unless portfolio_item.updated_at == portfolio_item.created_at %></i></p>

  <p><%= link_to "Edit", edit_portfolio_path(portfolio_item) %></p>

  <%= link_to 'Delete Portfolio Item', portfolio_destroy_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>


<% end %>
