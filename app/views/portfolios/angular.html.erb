<h2> Angular Portfolio Items </h2>

<%= link_to "Create New Portfolio", new_portfolio_path if logged_in?(:site_admin) %>

<% @angular_portfolio_items.reverse.each do |portfolio_items| %>
  <hr>
   <p><%= link_to portfolio_items.title, portfolio_show_path(portfolio_items) %></p>
  <p><%= portfolio_items.subtitle %></p>
  <p><%= portfolio_items.body %></p>
  <p><%= image_tag portfolio_items.thumb_img unless portfolio_items.thumb_img.nil? %></p> 
  <i><%= "Created on: " + portfolio_items.created_at.strftime("%A - %B %d, %Y") + " at " + portfolio_items.updated_at.strftime("%I:%M %P") unless portfolio_items.updated_at != portfolio_items.created_at %></i>
  <p><i><%= "Updated on: " + portfolio_items.updated_at.strftime("%A - %B %d, %Y") + " at " + portfolio_items.updated_at.strftime("%I:%M %P") unless portfolio_items.updated_at == portfolio_items.created_at %></i></p>
  <p><%= link_to "Edit", edit_portfolio_path(portfolio_items.id) if logged_in?(:site_admin)%>
  <%= link_to 'Delete', portfolio_path(portfolio_items), method: :delete, data: { confirm: 'Are you sure? Double check!' } if logged_in?(:site_admin)%></p>

<% end %>